{
  "app-id": "com.syntevo.SmartGit",
  "command": "smartgit",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "separate-locales": false,
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--device=dri",
    "--env=SMARTGIT_JAVA_HOME=/app/extra/smartgit/jre/",
    "--filesystem=home",
    "--filesystem=host:ro",
    "--share=ipc",
    "--share=network",
    "--socket=session-bus",
    "--socket=ssh-auth",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "git",
      "make-args": ["NO_PERL=1"],
      "make-install-args": ["NO_PERL=1"],
      "sources": [
        {
          "type": "archive",
          "sha256": "180feff58fc0d965d23ea010aa2c69ead92ec318eb9b09cf737529aec62f3ef4",
          "url": "https://www.kernel.org/pub/software/scm/git/git-2.19.0.tar.xz"
        }
      ]
    },
    {
      "name": "gnupg",
      "sources": [
        {
          "type": "archive",
          "sha256": "799dd37a86a1448732e339bd20440f4f5ee6e69755f6fd7a73ee8af30840c915",
          "url": "https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.2.10.tar.bz2"
        }
      ],
      "modules": [
        {
          "name": "libassuan",
          "sources": [
            {
              "type": "archive",
              "sha256": "47f96c37b4f2aac289f0bc1bacfa8bd8b4b209a488d3d15e2229cb6cc9b26449",
              "url": "https://gnupg.org/ftp/gcrypt/libassuan/libassuan-2.5.1.tar.bz2"
            }
          ],
          "modules": [
            {
              "name": "libgpg-error",
              "sources": [
                {
                  "type": "archive",
                  "sha256": "c345c5e73cc2332f8d50db84a2280abfb1d8f6d4f1858b9daa30404db44540ca",
                  "url": "https://gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-1.32.tar.bz2"
                }
              ]
            }
          ]
        },
        {
          "name": "libgcrypt",
          "sources": [
            {
              "type": "archive",
              "sha256": "66ec90be036747602f2b48f98312361a9180c97c68a690a5f376fa0f67d0af7c",
              "url": "https://gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-1.8.3.tar.bz2"
            }
          ]
        },
        {
          "name": "libksba",
          "sources": [
            {
              "type": "archive",
              "sha256": "41444fd7a6ff73a79ad9728f985e71c9ba8cd3e5e53358e70d5f066d35c1a340",
              "url": "https://gnupg.org/ftp/gcrypt/libksba/libksba-1.3.5.tar.bz2"
            }
          ]
        },
        {
          "name": "npth",
          "sources": [
            {
              "type": "archive",
              "sha256": "1393abd9adcf0762d34798dc34fdcf4d0d22a8410721e76f1e3afcd1daa4e2d1",
              "url": "https://gnupg.org/ftp/gcrypt/npth/npth-1.6.tar.bz2"
            }
          ]
        }
      ]
    },
    {
      "name": "pinentry",
      "config-opts": [
        "--enable-pinentry-tty",
        "--enable-pinentry-curses",
        "--enable-fallback-curses",
        "--enable-pinentry-gtk2",
        "--enable-pinentry-gnome3",
        "--enable-libsecret"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "68076686fa724a290ea49cdf0d1c0c1500907d1b759a3bcbfbec0293e8f56570",
          "url": "https://gnupg.org/ftp/gcrypt/pinentry/pinentry-1.1.0.tar.bz2"
        }
      ]
    },
    {
      "name": "smartgit",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 apply_extra /app/bin/apply_extra",
        "install -Dm0755 smartgit.sh /app/bin/smartgit",
        "install -Dm0644 smartgit-32.png /app/share/icons/hicolor/32x32/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 smartgit-48.png /app/share/icons/hicolor/48x48/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 smartgit-64.png /app/share/icons/hicolor/64x64/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 smartgit-128.png /app/share/icons/hicolor/128x128/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 smartgit-256.png /app/share/icons/hicolor/256x256/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 -t /app/share/appdata/ com.syntevo.SmartGit.appdata.xml",
        "install -Dm0644 -t /app/share/applications/ com.syntevo.SmartGit.desktop"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "smartgit.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "e3358528ef90ae56ce930034e7304d96ce18295f1a55d3813d76cb54c4904a38",
          "size": 68046602,
          "url": "https://www.syntevo.com/downloads/smartgit/smartgit-linux-18_1_5.tar.gz"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.desktop"
        },
        {
          "type": "file",
          "path": "smartgit-32.png"
        },
        {
          "type": "file",
          "path": "smartgit-48.png"
        },
        {
          "type": "file",
          "path": "smartgit-64.png"
        },
        {
          "type": "file",
          "path": "smartgit-128.png"
        },
        {
          "type": "file",
          "path": "smartgit-256.png"
        },
        {
          "type": "script",
          "commands": [
            "tar -xzf smartgit.tar.gz",
            "rm -f smartgit.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": [
            "/app/bin/gpg-agent --daemon --pinentry-program /app/bin/pinentry-gnome3",
            "exec env /app/extra/smartgit/bin/smartgit.sh \"$@\""
          ],
          "dest-filename": "smartgit.sh"
        }
      ]
    }
  ]
}
