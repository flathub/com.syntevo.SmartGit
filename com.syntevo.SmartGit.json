{
  "app-id": "com.syntevo.SmartGit",
  "command": "smartgit",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--env=SMARTGIT_JAVA_HOME=/app/extra/smartgit/jre",
    "--filesystem=host",
    "--filesystem=xdg-run/keyring",
    "--share=ipc",
    "--share=network",
    "--socket=ssh-auth",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "git",
      "buildsystem": "simple",
      "build-commands": [
        "install -D -m0755 -t /app/bin/ $(which git)",
        "install -D -m0755 -t /app/bin/ $(which git-cvsserver)",
        "install -D -m0755 -t /app/bin/ $(which git-receive-pack)",
        "install -D -m0755 -t /app/bin/ $(which git-shell)",
        "install -D -m0755 -t /app/bin/ $(which git-upload-archive)",
        "install -D -m0755 -t /app/bin/ $(which git-upload-pack)"
      ]
    }, {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": ["install -D -m0755 git-lfs /app/bin/"],
      "sources": [
        {
          "type": "archive",
          "sha256": "54054178deea7c97ce58edf9c0a2f79eb30c1e836fbc7e6dece9b2c9ff516863",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.8.0/git-lfs-linux-amd64-v2.8.0.tar.gz"
        }
      ]
    }, {
      "name": "openssh",
      "config-opts": ["--without-pie"],
      "no-make-install": true,
      "post-install": ["install -D -m0755 -t /app/bin/ ssh"],
      "sources": [
        {
          "type": "archive",
          "sha256": "bd943879e69498e8031eb6b7f44d08cdc37d59a7ab689aa0b437320c3481fd68",
          "url": "https://cloudflare.cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-8.0p1.tar.gz"
        }
      ]
    }, {
      "name": "smartgit",
      "buildsystem": "simple",
      "build-commands": [
        "install -D -m0755 smartgit.sh /app/bin/smartgit",
        "install -D -m0644 -t /app/share/applications/ ${FLATPAK_ID}.desktop",
        "install -D -m0644 -t /app/share/icons/hicolor/scalable/apps/ ${FLATPAK_ID}.svg",
        "install -D -m0644 -t /app/share/metainfo/ ${FLATPAK_ID}.appdata.xml",
        "install -D -m0755 -t /app/bin/ apply_extra"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "smartgit.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "d901de846276c80bbc12cd5004c23c617d58aba4fbb5e504320e4665278047f0",
          "size": 50031161,
          "url": "https://www.syntevo.com/downloads/smartgit/smartgit-linux-19_1_4.tar.gz"
        }, {
          "type": "file",
          "path": "com.syntevo.SmartGit.appdata.xml"
        }, {
          "type": "file",
          "path": "com.syntevo.SmartGit.desktop"
        }, {
          "type": "file",
          "path": "com.syntevo.SmartGit.svg"
        }, {
          "type": "script",
          "commands": [
            "tar -zxf smartgit.tar.gz",
            "rm -f smartgit.tar.gz"
          ],
          "dest-filename": "apply_extra"
        }, {
          "type": "script",
          "commands": ["exec /app/extra/smartgit/bin/smartgit.sh \"$@\""],
          "dest-filename": "smartgit.sh"
        }
      ]
    }
  ]
}
