{
  "app-id": "com.syntevo.SmartGit",
  "command": "smartgit",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--env=SMARTGIT_JAVA_HOME=/app/extra/smartgit/jre/",
    "--filesystem=host",
    "--filesystem=xdg-run/keyring",
    "--share=ipc",
    "--share=network",
    "--socket=ssh-auth",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "git",
      "make-args": [
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "make-install-args": [
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "post-install": ["find . -type f -name perllocal.pod -delete"],
      "sources": [
        {
          "type": "archive",
          "sha256": "9d2e91e2faa2ea61ba0a70201d023b36f54d846314591a002c610ea2ab81c3e9",
          "url": "https://kernel.org/pub/software/scm/git/git-2.20.1.tar.xz"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": ["install -D -m0755 git-lfs /app/libexec/git-core/"],
      "sources": [
        {
          "type": "archive",
          "sha256": "c098092be413915793214a570cd51ef46089b6f6616b2f78e35ba374de613b5b",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.6.1/git-lfs-linux-amd64-v2.6.1.tar.gz"
        }
      ]
    },
    {
      "name": "gnupg",
      "sources": [
        {
          "type": "archive",
          "sha256": "799dd37a86a1448732e339bd20440f4f5ee6e69755f6fd7a73ee8af30840c915",
          "url": "https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.2.10.tar.bz2"
        }
      ],
      "modules": [
        {
          "name": "libassuan",
          "sources": [
            {
              "type": "archive",
              "sha256": "47f96c37b4f2aac289f0bc1bacfa8bd8b4b209a488d3d15e2229cb6cc9b26449",
              "url": "https://gnupg.org/ftp/gcrypt/libassuan/libassuan-2.5.1.tar.bz2"
            }
          ],
          "modules": [
            {
              "name": "libgpg-error",
              "sources": [
                {
                  "type": "archive",
                  "sha256": "c345c5e73cc2332f8d50db84a2280abfb1d8f6d4f1858b9daa30404db44540ca",
                  "url": "https://gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-1.32.tar.bz2"
                }
              ]
            }
          ]
        },
        {
          "name": "libgcrypt",
          "sources": [
            {
              "type": "archive",
              "sha256": "66ec90be036747602f2b48f98312361a9180c97c68a690a5f376fa0f67d0af7c",
              "url": "https://gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-1.8.3.tar.bz2"
            }
          ]
        },
        {
          "name": "libksba",
          "sources": [
            {
              "type": "archive",
              "sha256": "41444fd7a6ff73a79ad9728f985e71c9ba8cd3e5e53358e70d5f066d35c1a340",
              "url": "https://gnupg.org/ftp/gcrypt/libksba/libksba-1.3.5.tar.bz2"
            }
          ]
        },
        {
          "name": "npth",
          "sources": [
            {
              "type": "archive",
              "sha256": "1393abd9adcf0762d34798dc34fdcf4d0d22a8410721e76f1e3afcd1daa4e2d1",
              "url": "https://gnupg.org/ftp/gcrypt/npth/npth-1.6.tar.bz2"
            }
          ]
        }
      ]
    },
    {
      "name": "pinentry",
      "config-opts": [
        "--enable-pinentry-tty",
        "--enable-pinentry-curses",
        "--enable-fallback-curses",
        "--enable-pinentry-gtk2",
        "--enable-pinentry-gnome3",
        "--enable-libsecret"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "68076686fa724a290ea49cdf0d1c0c1500907d1b759a3bcbfbec0293e8f56570",
          "url": "https://gnupg.org/ftp/gcrypt/pinentry/pinentry-1.1.0.tar.bz2"
        }
      ]
    },
    {
      "name": "openssh",
      "config-opts": ["--without-pie"],
      "no-make-install": true,
      "post-install": ["install -D -m0755 -t /app/bin/ ssh"],
      "sources": [
        {
          "type": "archive",
          "sha256": "6b4b3ba2253d84ed3771c8050728d597c91cfce898713beb7b64a305b6f11aad",
          "url": "https://cloudflare.cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-7.9p1.tar.gz"
        }
      ]
    },
    {
      "name": "smartgit",
      "buildsystem": "simple",
      "build-commands": [
        "install -D -m0755 smartgit.sh /app/bin/smartgit",
        "install -D -m0644 -t /app/share/applications/ ${FLATPAK_ID}.desktop",
        "install -D -m0644 -t /app/share/icons/hicolor/scalable/apps/ ${FLATPAK_ID}.svg",
        "install -D -m0644 -t /app/share/metainfo/ ${FLATPAK_ID}.appdata.xml",
        "install -D -m0755 -t /app/bin/ apply_extra"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "smartgit.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "3c6e63715c9f87d68cdd1e88bf52ee41ecd9fceef3a5ed7f48e5edfbf6758a5f",
          "size": 47256709,
          "url": "https://www.syntevo.com/downloads/smartgit/smartgit-linux-18_2_6.tar.gz"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.desktop"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.svg"
        },
        {
          "type": "script",
          "commands": [
            "tar -zxf smartgit.tar.gz",
            "rm -f smartgit.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": [
            "/app/bin/gpg-agent --daemon --pinentry-program /app/bin/pinentry-gnome3",
            "exec /app/extra/smartgit/bin/smartgit.sh \"$@\""
          ],
          "dest-filename": "smartgit.sh"
        }
      ]
    }
  ]
}
