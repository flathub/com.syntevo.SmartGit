{
  "app-id": "com.syntevo.SmartGit",
  "command": "smartgit",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "separate-locales": false,
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=dri",
    "--env=SMARTGIT_JAVA_HOME=/app/extra/smartgit/jre/",
    "--filesystem=host",
    "--filesystem=xdg-run/keyring",
    "--share=ipc",
    "--share=network",
    "--socket=ssh-auth",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "git",
      "make-args": [
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "make-install-args": [
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "post-install": [
        "find . -type f -name perllocal.pod -delete"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "9d2e91e2faa2ea61ba0a70201d023b36f54d846314591a002c610ea2ab81c3e9",
          "url": "https://kernel.org/pub/software/scm/git/git-2.20.1.tar.xz"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 git-lfs /app/libexec/git-core/"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "c098092be413915793214a570cd51ef46089b6f6616b2f78e35ba374de613b5b",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.6.1/git-lfs-linux-amd64-v2.6.1.tar.gz"
        }
      ]
    },
    {
      "name": "openssh",
      "config-opts": [
        "--without-pie"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "6b4b3ba2253d84ed3771c8050728d597c91cfce898713beb7b64a305b6f11aad",
          "url": "https://cloudflare.cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-7.9p1.tar.gz"
        }
      ]
    },
    {
      "name": "smartgit",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 smartgit.sh /app/bin/smartgit",
        "install -Dm0755 -t /app/bin/ apply_extra",
        "install -Dm0644 -t /app/share/applications/ com.syntevo.SmartGit.desktop",
        "install -Dm0644 -t /app/share/icons/hicolor/scalable/apps/ com.syntevo.SmartGit.svg",
        "install -Dm0644 -t /app/share/metainfo/ com.syntevo.SmartGit.appdata.xml"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "smartgit.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "41390b66c2952b19866233e367ddde96636f0d7bf9fdd48532d74e2db452ba29",
          "size": 47247772,
          "url": "https://www.syntevo.com/downloads/smartgit/smartgit-linux-18_2_5.tar.gz"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.desktop"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.svg"
        },
        {
          "type": "script",
          "commands": [
            "tar -zxf smartgit.tar.gz",
            "rm -f smartgit.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": [
            "exec /app/extra/smartgit/bin/smartgit.sh \"$@\""
          ],
          "dest-filename": "smartgit.sh"
        }
      ]
    }
  ]
}
