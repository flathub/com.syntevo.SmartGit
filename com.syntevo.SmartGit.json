{
  "app-id": "com.syntevo.SmartGit",
  "command": "smartgit",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "separate-locales": false,
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=dri",
    "--env=SMARTGIT_JAVA_HOME=/app/extra/smartgit/jre/",
    "--filesystem=host",
    "--share=ipc",
    "--share=network",
    "--socket=ssh-auth",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "git",
      "make-args": [
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "make-install-args": [
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "post-install": [
        "find . -type f -name perllocal.pod -delete"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "fce9a3a3297db5f3756c4553a2fc1fec209ee08178f8491e76ff4ff8fe7b8be9",
          "url": "https://kernel.org/pub/software/scm/git/git-2.19.2.tar.xz"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 git-lfs /app/libexec/git-core/"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "43e9311bdded82d43c574b075aafaf56681a3450c1ccf59cce9d362acabf1362",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.6.0/git-lfs-linux-amd64-v2.6.0.tar.gz"
        }
      ]
    },
    {
      "name": "smartgit",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 -t /app/bin/ apply_extra",
        "install -Dm0755 smartgit.sh /app/bin/smartgit",
        "install -Dm0644 -t /app/share/applications/ com.syntevo.SmartGit.desktop",
        "install -Dm0644 -t /app/share/icons/hicolor/scalable/apps/ com.syntevo.SmartGit.svg",
        "install -Dm0644 -t /app/share/metainfo/ com.syntevo.SmartGit.appdata.xml"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "smartgit.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "e36409d837c7b029b7d6885fc094714a70a7b5b83e555f40bf2ed86637db0632",
          "size": 45016053,
          "url": "https://www.syntevo.com/downloads/smartgit/smartgit-linux-18_2_4.tar.gz"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.desktop"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.svg"
        },
        {
          "type": "script",
          "commands": [
            "tar -zxf smartgit.tar.gz",
            "rm -f smartgit.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": [
            "exec /app/extra/smartgit/bin/smartgit.sh \"$@\""
          ],
          "dest-filename": "smartgit.sh"
        }
      ]
    }
  ]
}
