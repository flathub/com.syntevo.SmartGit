{
  "app-id": "com.syntevo.SmartGit",
  "command": "smartgit",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--env=SMARTGIT_JAVA_HOME=/app/extra/smartgit/jre",
    "--filesystem=host",
    "--filesystem=xdg-run/gnupg:ro",
    "--filesystem=xdg-run/keyring",
    "--share=ipc",
    "--share=network",
    "--socket=ssh-auth",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.gnome.keyring.SystemPrompter"
  ],
  "modules": [
    {
      "name": "gcr",
      "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/girepository-1.0",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/info",
        "/share/man",
        "/share/pkgconfig",
        "*.a",
        "*.la"
      ],
      "config-opts": [
        "--disable-schemas-compile",
        "--disable-static",
        "--disable-update-mime",
        "--enable-valgrind=no"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "29df50974a90987af694c0fb8926a6b366e68cacd8abd813817cfe1eb5d54524",
          "url": "https://download.gnome.org/sources/gcr/3.34/gcr-3.34.0.tar.xz"
        }
      ]
    }, {
      "name": "git",
      "make-args": [
        "INSTALL_SYMLINKS=1",
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "make-install-args": [
        "INSTALL_SYMLINKS=1",
        "NO_PERL=YesPlease",
        "NO_TCLTK=YesPlease"
      ],
      "post-install": ["find . -type f -name perllocal.pod -delete"],
      "sources": [
        {
          "type": "archive",
          "sha256": "234fa05b6839e92dc300b2dd78c92ec9c0c8d439f65e1d430a7034f60af16067",
          "url": "https://kernel.org/pub/software/scm/git/git-2.23.0.tar.xz"
        }
      ]
    }, {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": ["install -D --mode=0755 git-lfs /app/bin/"],
      "sources": [
        {
          "type": "archive",
          "sha256": "54054178deea7c97ce58edf9c0a2f79eb30c1e836fbc7e6dece9b2c9ff516863",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.8.0/git-lfs-linux-amd64-v2.8.0.tar.gz"
        }
      ]
    }, {
      "name": "openssh",
      "buildsystem": "simple",
      "build-commands": ["ln --symbolic /usr/bin/ssh /app/bin/ssh"]
    }, {
      "name": "pinentry",
      "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/girepository-1.0",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/info",
        "/share/man",
        "/share/pkgconfig",
        "*.a",
        "*.la"
      ],
      "config-opts": [
        "--disable-fallback-curses",
        "--disable-ncurses",
        "--disable-pinentry-curses",
        "--disable-pinentry-emacs",
        "--disable-pinentry-fltk",
        "--disable-pinentry-gtk2",
        "--disable-pinentry-qt5",
        "--disable-pinentry-tqt",
        "--disable-pinentry-tty",
        "--enable-libsecret=no",
        "--enable-pinentry-gnome3",
        "--without-libcap"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "68076686fa724a290ea49cdf0d1c0c1500907d1b759a3bcbfbec0293e8f56570",
          "url": "https://www.gnupg.org/ftp/gcrypt/pinentry/pinentry-1.1.0.tar.bz2"
        }
      ]
    }, {
      "name": "smartgit",
      "buildsystem": "simple",
      "build-commands": [
        "install -D --mode=0755 entrypoint.sh /app/bin/smartgit",
        "install -D --mode=0644 --target-directory=/app/share/applications/ com.syntevo.SmartGit.desktop",
        "install -D --mode=0644 --target-directory=/app/share/icons/hicolor/scalable/apps/ com.syntevo.SmartGit.svg",
        "install -D --mode=0644 --target-directory=/app/share/metainfo/ com.syntevo.SmartGit.appdata.xml",
        "install -D --mode=0755 apply_extra.sh /app/bin/apply_extra"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "smartgit.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "13d78de36c3103a94382d3ce038f6a119a982ebc39ecd013952087bfdbf694b0",
          "size": 50036179,
          "url": "https://www.syntevo.com/downloads/smartgit/smartgit-linux-19_1_5.tar.gz"
        }, {
          "type": "file",
          "path": "apply_extra.sh"
        }, {
          "type": "file",
          "path": "entrypoint.sh"
        }, {
          "type": "file",
          "path": "com.syntevo.SmartGit.appdata.xml"
        }, {
          "type": "file",
          "path": "com.syntevo.SmartGit.desktop"
        }, {
          "type": "file",
          "path": "com.syntevo.SmartGit.svg"
        }
      ]
    }
  ]
}
